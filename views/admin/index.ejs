  <script>
        // L칩gica para deshabilitar inputs seg칰n selecci칩n de fondo
        document.addEventListener('DOMContentLoaded', function() {
          const colorFondo = document.getElementById('colorFondo');
          const fondoUrl = document.getElementById('fondoUrl');
          const fondoFile = document.getElementById('fondoFile');
          const fondoInicio = document.getElementById('fondoInicio');
          const fondoServicios = document.getElementById('fondoServicios');
          const fondoGaleria = document.getElementById('fondoGaleria');
          const fondoContacto = document.getElementById('fondoContacto');

          function updateFondoInputs() {
            // Reiniciar todo primero
            colorFondo.disabled = false;
