            const hasFondosEspecificos = fondoInicio.files.length > 0 || fondoServicios.files.length > 0 || fondoGaleria.files.length > 0 || fondoContacto.files.length > 0;
            
            // Luego deshabilitar seg칰n la selecci칩n
            if (colorFondo.value && colorFondo.value !== '#ffffff') {
              fondoUrl.disabled = true;
              fondoFile.disabled = true;
              fondoInicio.disabled = true;
              fondoServicios.disabled = true;
              fondoGaleria.disabled = true;
              fondoContacto.disabled = true;
            } else if (fondoUrl.value) {
              colorFondo.disabled = true;
              fondoFile.disabled = true;
              fondoInicio.disabled = true;
              fondoServicios.disabled = true;
              fondoGaleria.disabled = true;
              fondoContacto.disabled = true;
            } else if (fondoFile.files.length > 0) {
              colorFondo.disabled = true;
              fondoUrl.disabled = true;
              fondoInicio.disabled = true;
