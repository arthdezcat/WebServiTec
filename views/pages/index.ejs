              if (currentGaleriaSlide >= galeriaSlides.length) currentGaleriaSlide = 0;
              showGaleriaSlide(currentGaleriaSlide);
            }
            
            function goToGaleriaSlide(idx) {
              currentGaleriaSlide = idx;
